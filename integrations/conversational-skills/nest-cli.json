{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [ {
      "include": "api-spec/**",
      "outDir": "dist/src"
    }, {
      "include": "assets/**",
      "outDir": "dist/src",
      "watchAssets": true
    }, {
      "include": "config/**",
      "outDir": "dist",
      "watchAssets": true
    }]
  }
}
